<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    Left stroke shape    -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="@dimen/_1sdp"
                android:color="@color/icon_color"/>
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>

    <!--    Right stroke shape    -->
    <item
        android:left="@dimen/_1sdp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="@dimen/_1sdp"
                android:color="@color/icon_color"/>
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>


    <!--    Bottom stroke shape    -->
    <item android:left="@dimen/_1sdp"
        android:top="@dimen/_1sdp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="@dimen/_1sdp"
                android:color="@color/icon_color"/>
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>


    <!--    Background shape    -->
        <item android:left="@dimen/_1sdp"
            android:right="@dimen/_1sdp"
            android:bottom="@dimen/_1sdp">
            <shape>
                <solid android:color="@color/background"/>
                <corners android:radius="@dimen/_10sdp" />
            </shape>
        </item>


</layer-list>
